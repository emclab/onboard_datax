<% if @view_in_config && @erb_code %>
  <%= render inline: ERB.new(@erb_code).result(binding) %>
  
<% else %>
<div id="main_body">

<h1><%=@title %></h1>

<p>
  <b><%=t('Submit Date')%></b>
  <%= @onboard_engine_config.created_at.strftime('%Y/%m/%d') %>
</p>
<p>
  <b><%=t('Project Name')%></b>
  <%= @project.name %>
</p>
<p>
  <b><%=t('Release')%></b>
  <%= @onboard_engine_config.release.name if @onboard_engine_config.release_id.present? %>
</p>
<p>
  <b><%=t('Engine Name')%></b>
  <%= @engine.name %>
</p>
<p>
  <b><%=t('Argument Desp') %></b>
  <%= @engine_config.argument_desp %>
</p>
<p>
  <b><%=t('Argument Name') %></b>
  <%= @engine_config.argument_name %>
</p>
<p>
  <b><%=t('Engine Version') %></b>
  <%= @engine_config.engine_version %>
</p>
<p>
  <b><%=t('Argument Value') %></b>
  <%%= @engine_config.argument_value %>
</p>
<p>
  <b><%=t('Custom Argument Value') %></b>
  <%%= @onboard_engine_config.custom_argument_value %>
</p>
<p>
  <b><%=t('Global') %></b>
  <%= @engine_config.global ? t('Yes') : t('No') %>
</p>

<p>
  <b><%= t('Last Updated By') %></b>
  <%= @onboard_engine_config.last_updated_by.name if @onboard_engine_config.last_updated_by_id.present? %>
</p>

   <table class="table table-striped">
	  <tr>
	    <th>
          <%= link_to t('Back'), SUBURI + "/view_handler?index=0", :id => 'close', :class => BUTTONS_CLS['action'] %>
          &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
  		  <%= link_to t('Delete'), onboard_engine_config_path(@onboard_engine_config), :method => :delete, :confirm => I18n.t('Delete the record?'), :class => BUTTONS_CLS['action'] if has_action_right?('destroy', params[:controller], @onboard_engine_config) %>
   		</th>
	  </tr>
	</table> 
</div>

<% end %>
